<%# views/editArticle.ejs %>

<% extend('layout') %>

<div class=container>
  <div class="container">
    <form method="POST" action='/edit/<%= article.id %>' style="width: 50%; margin: 20px auto">
      <div class="form-group">
        <label for="title">Title</label>
        <input 
          type="text" 
          name="title" 
          class="form-control" 
          id="title" 
          placeholder="Article's Title"
          value="<%= article.title %>">
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input 
          type="text" 
          name="author" 
          class="form-control" 
          id="author" 
          placeholder="Article's Author"
          value="<%= article.author %>">
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea 
          name="body" 
          class="form-control" 
          id="body" 
          placeholder="Article's Body"
          ><%= article.body %></textarea>
      </div>
      <button type="submit" class="btn btn-warning">Edit</button>
    </form>
  </div>
  </div>
</div>